         </BorderPane.margin>
      </GridPane>
   </top>
   <center>
      <ScrollPane prefHeight="200.0" prefWidth="200.0" styleClass="box" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="5.0" />
         </BorderPane.margin>
      </ScrollPane>
   </center>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
