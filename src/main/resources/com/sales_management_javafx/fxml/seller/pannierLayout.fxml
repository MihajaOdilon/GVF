        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <ButtonBar buttonMinWidth="0.0" prefHeight="40.0" prefWidth="200.0" GridPane.columnIndex="2">
              <buttons>
                <Button fx:id="closePannierButton" mnemonicParsing="false" styleClass="buttons" text="x" textFill="RED">
