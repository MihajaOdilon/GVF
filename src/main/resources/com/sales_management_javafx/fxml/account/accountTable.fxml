<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>


<BorderPane fx:id="table_borderpane" styleClass="table-borderpane" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sales_management_javafx.controller.account.AccountTableController">
   <center>
      <TableView fx:id="account_tableview" editable="true" focusTraversable="false" prefHeight="400.0" prefWidth="596.0" styleClass="table">
         <columns>
            <TableColumn fx:id="id_column" maxWidth="150.0" minWidth="0.0" styleClass="table-columns">
               <graphic>
                  <Label styleClass="table-column" text="id" />
               </graphic>
            </TableColumn>
            <TableColumn fx:id="username_column" prefWidth="136.0" styleClass="table-columns" text="Nom d'utilisateur" />
            <TableColumn fx:id="username_column1" maxWidth="200.0" minWidth="0.0" prefWidth="-1.0" styleClass="table-columns" text="Actions">
               <columns>
                  <TableColumn fx:id="delete_column" maxWidth="100.0" minWidth="0.0" prefWidth="75.0" />
                  <TableColumn fx:id="info_column" maxWidth="100.0" minWidth="0.0" prefWidth="75.0" />
               </columns>
            </TableColumn>
         </columns>
         <BorderPane.margin>
            <Insets bottom="5.0" />
         </BorderPane.margin>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </center>
</BorderPane>
